<h1>Listing studios</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Address</th>
      <th>Url</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody class="">
  <% cache ['storeStudio', Studio.latest] do %> 
    <% @studios.each do |studio| %>
	  <% cache ['entry', studio] do %> 	
			<tr>
				<td><%= studio.name %></td>
				<td><%= studio.address %></td>
				<td><%= link_to 'Visit Website', studio.url %></td>
				<td><%= link_to 'Show', studio, class: 'btn btn-default btn-xs' %></td>
				<td><%= link_to 'Edit', edit_studio_path(studio), class: 'btn btn-info btn-xs' %></td>
				<td><%= link_to 'Destroy', studio, method: :delete, class: 'btn btn-danger btn-xs', data: { confirm: 'Are you sure?' } %></td>
			  </tr>
			<% end %>
		<% end %>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Studio', new_studio_path %>
