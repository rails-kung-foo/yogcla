<h1>Listing admins</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @admins.each do |admin| %>
      <tr>
        <td><%= admin.name %></td>
        <td><%= link_to 'Show', admin, class: 'btn btn-default btn-xs' %></td>
        <td><%= link_to 'Edit', edit_admin_path(admin), class: 'btn btn-info btn-xs' %></td>
        <td><%= link_to 'Destroy', admin, method: :delete, class: 'btn btn-danger btn-xs', data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

