<h1>Listing courses</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Studio</th>
      <th>Style</th>
      <th>Start</th>
      <th>End</th>
      <th>Weekday</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% cache ['storeCourse', Course.latest] do %> 
    <% @courses.each do |course| %>
	  <% cache ['entry', course] do %> 	
      <tr>
        <td><%= @studios.find_by(id: course.studio_id).name %></td>
        <td class="textCapitalize" ><%= @styles.find_by(id: course.style_id).stil  %></td>
        <td><%= course.start %></td>
        <td><%= course.end %></td>
        <td class="textCapitalize" ><%= course.weekday %></td>
		<% if session[:admin_id]%>
        <td><%= link_to 'Show', course, class: 'btn btn-default btn-xs' %></td>
        <td><%= link_to 'Edit', edit_course_path(course), class: 'btn btn-info btn-xs' %></td>
        <td><%= link_to 'Destroy', course, method: :delete, class: 'btn btn-danger btn-xs', data: { confirm: 'Are you sure?' } %></td>
		<% end %>
	  </tr>
	  
    <% end %>
	<% end %>
	<% end %>
  </tbody>
</table>

<br>
<% if session[:admin_id]%>
<%= link_to 'New Course', new_course_path %>
<% end %>