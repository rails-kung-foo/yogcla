<h1>Admin Area</h1>
<%= form_tag do %>
	<fieldset>
		<legend>Please Log In</legend>	
		<div>
			<%= label_tag :name, 'Name:' %>
			<%= text_field :name, params[:name] %>
		</div>
		<div>
			<%= label_tag :password, 'Password:' %>
			<%= password_field_tag :password, params[:password] %>
		</div>
		<div>
			<%= submit_tag "Login" %>
		</div>
	</fieldset>
	
	
	
<% end %>