<h1>Search for your Yogaclass - JavaScript Way </h1>

<!-- JavasScript search -->
<div id="jsSearch">
	<%= form_tag root_path, :method => 'get' do %>
	
	  <div class="field textCapitalize">
		<%= label_tag :style_id %><br>
		<%= select_tag :style_id,options_for_select(Course::GETSTYLES),class:'textCapitalize'   %>
	  </div>
	  
	  <div class="field textCapitalize">
		<%= label_tag :weekday %><br>
		<%= select_tag :weekday, options_for_select(Course::WEEKDAYS),class:'textCapitalize'   %>
	  </div>
	  
	  <div class="field textCapitalize">
		<%= label_tag :start %><br>
		<%= time_select :start, params[:start], { minute_step: 15, ignore_date: true }   %>
	  </div>
	 
	  <%= submit_tag "Search", :name => nil %>	
	<% end %>

</div>
